			"name": "Transactions",
			"item": [
				{
					"name": "Store",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate random amount between 1 and 1000 with 2 decimal places",
									"const amount = (Math.random() * 999 + 1).toFixed(2);",
									"",
									"// List of possible descriptions",
									"const descriptions = [",
									"    \"Grocery shopping\",",
									"    \"Gas station\",",
									"    \"Restaurant bill\",",
									"    \"Online purchase\",",
									"    \"Utility payment\",",
									"    \"Phone bill\",",
									"    \"Internet service\",",
									"    \"Coffee shop\",",
									"    \"Movie tickets\",",
									"    \"Book store\"",
									"];",
									"",
									"// List of account types",
									"const accountTypes = [\"checking\", \"savings\", \"credit\"];",
									"",
									"// Set random values in environment variables",
									"pm.environment.set(\"amount\", amount);",
									"pm.environment.set(\"description\", descriptions[Math.floor(Math.random() * descriptions.length)]);",
									"pm.environment.set(\"accountType\", accountTypes[Math.floor(Math.random() * accountTypes.length)]);"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": {{amount}},\n    \"description\": \"{{description}}\",\n    \"accountType\": \"{{accountType}}\"\n}\n"
						},
						"url": {
							"raw": "{{base_url}}/api/transactions",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"transactions"
							]
						}
					},
